<div class="container mx-auto  text-center">
  <h1 class="font-bold text-4xl my-3"><%= t('.title') %></h1>
  <div class="p-4 m-2 max-w-sm mx-auto bg-stone-300 rounded-md border-2 border-black">
    <%= form_with url: password_resets_path do |f| %>
      <div class='mb-3'>
        <%= f.label :email, t('.email'), class: "block" %>
        <%= f.email_field :email, class: "mt-1" %>
      </div>
      
      <%= f.submit t('.submit'), class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out border border-black"%>
    <% end %>
  </div>
</div>
