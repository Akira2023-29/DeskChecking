<%= search_form_for q, url: url do |f| %>
    <%= f.label :title_cont, "アイテム名", class: "font-bold" %>
    <%= f.search_field :title_cont, placeholder: "例：キーボード", class: "w-full my-1" %>

    <%= f.label :body_cont, "アイテム説明", class: "font-bold" %>
    <%= f.search_field :body_cont, placeholder: "例：癒し・効率", class: "w-full my-1" %>

    <%= f.label :calors_id_eq, "色区分", class: "font-bold ml-1"%>
    <%= f.collection_select :calors_id_eq, Color.all, :id, :name, include_blank: "未指定", class: "mx-1 my-1" %>

    <%= f.label :item_category_id_eq, "カテゴリー", class: "font-bold ml-1" %>
    <%= f.collection_select :item_category_id_eq, ItemCategory.all, :id, :name, include_blank: "未指定", class: "mx-1 my-1", data: {categories: Place.all.map { |p| [p.id, p.category_id] }.to_h.to_json} %>

    <%= f.submit class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl ml-2 py-1 px-3 rounded-md transition duration-150 ease-in-out border border-black"%>
<% end %>
