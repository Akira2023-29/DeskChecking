<div class="container mx-auto text-center">
  <h1 class="font-bold text-4xl"><%= t('.title') %></h1>

  <div class="p-4 m-2 max-w-sm mx-auto bg-stone-300 rounded-md border-2 border-black">
    <%= form_with url: login_path do |f| %>
      <div class='mb-3'>
        <%= f.label :email, t('.email'), class: "block" %>
        <%= f.email_field :email, class: "mt-1" %>
      </div>

      <div class='mb-3'>
        <%= f.label :password, t('.password'), class: "block" %>
        <%= f.password_field :password, class: "mt-1" %>
      </div>

      <%= f.submit t('.login'), class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out border border-black" %>
    <% end %>

    <hr class="border-1 bg-cyan-400 my-4">

    <!-- Googleアカウントログイン　-->
    <div class="flex justify-center">
      <%= link_to auth_at_provider_path(provider: :google), class: "flex items-center inline-block bg-red-500 hover:bg-red-400 text-black font-bold text-1xl mb-3 py-2 px-4 rounded-full transition duration-150 ease-in-out border border-black" do %>
        <%= image_tag 'google_icon.png', class: "h-7 w-7 object-cove rounded-full mr-2"%>
        <%= t('.google_login') %>
      <% end %>
    </div>

    <div>
      <%= link_to t('.to_user_new'), new_user_path, class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out border border-black" %>
      <%= link_to t('.password_forget'), new_password_reset_path, class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out border border-black" %>
    </div>
  </div>
</div>
