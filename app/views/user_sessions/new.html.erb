<div class="mx-auto  text-center">
  <h1 class="font-bold text-4xl my-6"><%= t('.title') %></h1>

  <div class="m-3">
    <%= form_with url: login_path do |f| %>
      <div class='mb-3'>
        <%= f.label :email, t('email'), class: "block" %>
        <%= f.email_field :email, class: "mt-1" %>
      </div>

      <div class='mb-3'>
        <%= f.label :password, t('.password'), class: "block" %>
        <%= f.password_field :password, class: "mt-1" %>
      </div>

      <%= f.submit t('.login'), class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out" %>
    <% end %>

    <!-- Googleアカウントログイン　-->
    <div>
      <%= link_to t('.google_login'), auth_at_provider_path(provider: :google), class: "inline-block bg-red-400 hover:bg-red-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded-full transition duration-150 ease-in-out" %>
    </div>

    <div>
      <%= link_to t('.to_user_new'), new_user_path, class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out" %>
      <%= link_to t('.password_forget'), new_password_reset_path, class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl mb-3 py-2 px-4 rounded transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>
