<div>
  <h1 class="font-bold text-4xl">ログイン</h1>

  <%= form_with url: login_path do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "ログイン" %>
  <% end %>

  <div>
    <%= link_to "新規登録はこちら", new_user_path %>
    <%= link_to "パスワードを忘れた方はこちら", "#" %>
  </div>
</div>
