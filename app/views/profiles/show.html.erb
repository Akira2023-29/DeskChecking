<% content_for(:title, t('.title')) %>
<div class="container mx-auto text-center pb-10">
  <h1 class="mb-1 font-bold text-2xl sm:text-3xl md:text-4xl"><%= t('.title') %></h1>
  <div class="p-2 mb-5 max-w-sm mx-auto bg-stone-300 rounded-md border-2 border-black">
    <%= t('.name') %>
    <div class="mb-2">
      <%= @user.name %>
    </div>
    <hr class="border border-stone-400 mb-2 mx-5">
    <%= t('.email') %>
    <div class="mb-2">
      <%= @user.email %>
    </div>

    <hr class="border border-stone-400 mb-2 mx-5">

    <!-- アバター画像 -->
    <div class="mb-3 flex justify-center ">
      <% if @user.google_avatar_image.blank? %>
        <%= image_tag @user.avatar_image_url, class: "h-32 w-32 object-cove rounded-full object-cover" %>
      <% else %>
        <%= image_tag @user.google_avatar_image, class: "h-32 w-32 object-cove rounded-full object-cover" %>
      <% end %>
    </div>

    <div class="mb-3">
      <%= link_to t('.edit'), edit_profile_path, class: "inline-block bg-amber-100 hover:bg-amber-500 text-black font-bold text-1xl py-2 px-4 rounded-md transition duration-150 ease-in-out border border-black" %>
    </div>
  </div>

  <!-- 自分の診断履歴 -->
  <div class="mb-1">
    <h1 class="mb-3 font-bold text-2xl sm:text-3xl"><%= t('.result') %></h1>
  </div>
  <div class="mb-2 ">
    <div class="mb-3 flex flex-wrap flex-col sm:flex-row justify-center">
      <% if @diagnoses.present? %>
        <div class="mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-center">
          <%= render @diagnoses %>
        </div>
      <% else %>
        <div><%= t('.not_result') %></div>
      <% end %>
    </div>
  </div>
</div>
