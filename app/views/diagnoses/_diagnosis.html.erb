<div class="container max-w-sm p-5 m-2 shadow-lg shadow-cyan-900/80 bg-cyan-600 hover:bg-cyan-500 rounded-md transition duration-300">
    <div class="my-3">
        <div class="mb-3 flex justify-center">
            <% if diagnosis.desk_image? %>
                <%= image_tag diagnosis.desk_image.url%>
            <% end %>
        </div>

        <div class="mb-3">
            <%= link_to "【診断結果】", diagnosis_path(diagnosis), class: "underline underline-offset-2 text-2xl mb-1" %>
        </div>

        <!-- タグ表示 -->
        <div class="mb-3 flex flex-wrap justify-center">
            <% diagnosis.tags.each do |tag| %>
                <div class="px-2">
                    <%= link_to tag.tag_name, "#", class: "bg-amber-600 hover:bg-amber-800 rounded transition duration-150 ease-in-out" %>
                </div>
            <% end %>
        </div>

        <div class="mb-3 flex flex-col">  
            <div><%= diagnosis.user.name %></div>
            <div><%= l diagnosis.created_at, format: :long %></div>
        </div>

        <% if current_user&.own?(diagnosis) %>
            <div class="mb-3 inline-block bg-amber-600 hover:bg-amber-800 text-white font-bold mx-1 py-2 px-4 rounded transition duration-150 ease-in-out">
                <%= link_to "削除する", diagnosis_path(diagnosis), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？"}%>
            </div>
        <% end %>
    </div>
</div>