<div class="container mx-auto text-center">
  <div class="mb-2">
    <div class="mb-1 font-bold text-4xl text-white">
      <%= t('.title') %>
    </div>
  </div>

  <!-- グラフ -->
  <div class="p-4 mb-3 bg-green-800 rounded-md ">
    <div class="container w-full flex flex-col xl:flex-row justify-center">
      <%= render "shared/graph" %>
    </div>
  </div>

  <!-- 検索フォーム -->
  <div class="mb-3 py-1 px-2 flex justify-around bg-white rounded-md">
    <%= t('.tag_search') %>
    <% Place.all.each do |place| %>
      <%= link_to place.name, tagged_diagnoses_path(tag_name: tag.tag_name), class: "mb-1 mx-1 rounded px-2 bg-white hover:bg-amber-500 transition duration-150 ease-in-out" %>
    <% end %>
  </div>

  <!-- 診断一覧 -->
  <div class="p-4 mb-2 bg-green-800 rounded-md ">
    <div class="mb-3 flex flex-wrap flex-col sm:flex-row justify-center">
      <% if @diagnoses.present? %>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <%= render @diagnoses %>
        </div>
      <% else %>
        <div><%= t('.not_result') %></div>
      <% end %>
    </div>
    <%= paginate @diagnoses, theme: 'diagnoses' %>
  </div>
</div>
